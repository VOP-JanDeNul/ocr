            <Grid >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Column="0"
                        Grid.Row="0">
                    <Label Text=" Company:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="companyEntry"
                        Placeholder="Enter the Company"
                        Text="{Binding Company}"
                        ReturnType="Next" 
                        Grid.Column="0" 
                        Grid.Row="0"/>
</StackLayout>
                    <Button ClassId="companySwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1"
                        Grid.Row="0"
                        Clicked="OnSwapClicked"/>
                

                <!-- NAME -->
                <StackLayout Grid.Column="0"
                        Grid.Row="1">
                    <Label Text=" Name:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="nameEntry"
                          
                        Placeholder="Enter the Name"
                        Text="{Binding Name}"
                        ReturnType="Next" 
                        />

                </StackLayout>
                <Button ClassId="nameSwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1" 
                        Grid.Row="1"
                        Clicked="OnSwapClicked"/>



                <!-- NATURE -->

                <StackLayout Grid.Column="0"
                        Grid.Row="2">
                    <Label Text=" Nature:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="natureEntry"
                        Placeholder="Enter the Nature"
                        Text="{Binding Nature}"
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="2"/>
                </StackLayout>
                <Button ClassId="natureSwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1" 
                        Grid.Row="2"
                        Clicked="OnSwapClicked"/>



                <!-- JOBTITLE -->

                <StackLayout Grid.Column="0"
                        Grid.Row="3">
                    <Label Text=" Job title:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="jobtitleEntry"
                        Placeholder="Enter the Job Title"
                        Text="{Binding Jobtitle}"
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="3"/>
                </StackLayout>
                <Button ClassId="jobtitleSwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1" 
                        Grid.Row="3"
                        Clicked="OnSwapClicked"/>



                <!-- PHONE -->
                <StackLayout Grid.Column="0"
                        Grid.Row="4">
                    <Label Text=" Phone number:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="phoneEntry"
                        Placeholder="Enter the Phone number"
                        Text="{Binding Phone}"
                        Keyboard="Telephone"
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="4"/>
                </StackLayout>
                <Button ClassId="phoneSwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1" 
                        Grid.Row="4"
                        Clicked="OnSwapClicked"/>



                <!-- MOBILE -->

                <StackLayout Grid.Column="0"
                        Grid.Row="5">
                    <Label Text=" Mobile number:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="mobileEntry"
                        Placeholder="Enter the Mobile number"
                        Text="{Binding Mobile}"
                        Keyboard="Telephone" 
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="5" />
                </StackLayout>
                <Button ClassId="mobileSwap" 
                        Image="drawable/icon_swap" 
                        Grid.Column="1"
                        Grid.Row="5"
                        Clicked="OnSwapClicked"/>



                <!-- EMAIL -->

                <StackLayout Grid.Column="0"
                        Grid.Row="6">
                    <Label Text=" Email:" VerticalOptions="Start"></Label>
                    <Entry  x:Name="emailEntry"
                        Placeholder="Enter the Email"
                        Text="{Binding Email}"
                        Keyboard="Email"
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="6" />
                </StackLayout>
                <Button ClassId="emailSwap" 
                        Image="drawable/icon_swap"
                        Grid.Column="1" 
                        Grid.Row="6"
                        Clicked="OnSwapClicked" />



                <!-- FAX -->
                <StackLayout Grid.Column="0"
                        Grid.Row="7">
                    <Label Text=" Fax number:" VerticalOptions="Start"></Label>
                <Entry  x:Name="faxEntry"   
                        Placeholder="Enter the Fax number"
                        Text="{Binding Fax}"
                        Keyboard="Telephone"
                        ReturnType="Next" 
                        Grid.Column="0"
                        Grid.Row="7" />
 </StackLayout>
                <Button ClassId="faxSwap" 
                        Image="drawable/icon_swap"
                        Grid.Column="1" 
                        Grid.Row="7"
                        Clicked="OnSwapClicked" />
               

                <!-- ADDRESS -->
                    <StackLayout Grid.Column="0"
                        Grid.Row="8">
                        <Label Text=" Address:" VerticalOptions="Start"></Label>
                        <Entry  x:Name="addressEntry"
                        Placeholder="Enter the Address"
                        Text="{Binding Address}"
                        ReturnType="Done"    
                        Grid.Column="0" 
                        Grid.Row="8" />
</StackLayout>
                        <Button ClassId="addressSwap" 
                        Image="drawable/icon_swap"
                        Grid.Column="1" 
                        Grid.Row="8"
                        Clicked="OnSwapClicked" />
                    
            </Grid>




            <Image Source="{Binding FileName}"/>


            <!--Automatisch eigen naam/mail laten invullen?-->
